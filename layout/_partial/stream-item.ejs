<div class="stream-item">
    <div class="stream-item-ctx">
        <h2 class="stream-item-title"><a href="<%- url_for(post.path) %>"><%= post.title %></a></h2>
        <div class="stream-item-snipper"><%- post.excerpt %></div>
        <div class="stream-item-meta">
            <% post.categories.each(function(category){ %>
            <a href="<%= url_for(category.path) %>"><%= category.name %></a>
            <% }) %> Â· 
            <time><%= date(post.date, null) %></time>
        </div>
    </div>
    <% if (post.thumbnail) { %>
        <img src="<%= post.thumbnail %>" class="stream-item-avatar">
    <% } %>
</div>